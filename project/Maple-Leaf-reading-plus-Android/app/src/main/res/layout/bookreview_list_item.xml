<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/s_review"
        android:layout_below="@+id/s_title_qianduan"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/s_review_user_img"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dog"/>
        <TextView
            android:id="@+id/s_review_user_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="感谢分享"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/s_review_user_img"
            android:layout_alignTop="@+id/s_review_user_img"/>
        <TextView
            android:id="@+id/s_review_user_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/s_review_user_img"
            android:layout_below="@+id/s_review_user_name"
            android:layout_marginTop="10dp"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
    </RelativeLayout>

</LinearLayout>
