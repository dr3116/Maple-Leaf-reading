<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/head_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/line"
            android:src="@drawable/line"
            android:layout_width="30dp"
            android:layout_toRightOf="@+id/back"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/back_home"
            android:src="@drawable/home"
            android:layout_toRightOf="@+id/line"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:text="搜索"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/index_ll"
        android:layout_width="match_parent"
        android:layout_below="@+id/head_ll"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/index_round_box"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_find"
            android:layout_weight="90"
            android:layout_width="350dp"
            android:background="@null"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:src="@drawable/sousuo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seach_info_ll"
        android:layout_width="match_parent"
        android:layout_below="@id/index_ll"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="历史记录"/>
            <ImageView
                android:id="@+id/declear_search_history"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/declear"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/history_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="大家都在搜"/>
        <LinearLayout
            android:id="@+id/search_heat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/seach_info_ll"/>
</RelativeLayout>