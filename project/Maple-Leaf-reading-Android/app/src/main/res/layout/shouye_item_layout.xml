<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginTop="10dp"
    android:id="@+id/s_first_qianduan"
    android:layout_below="@+id/s_title_qianduan"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/s_first_qianduan_img"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:src="@drawable/bookimg2"/>
    <TextView
        android:id="@+id/s_first_qianduan_bookname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="奋斗奋斗奋斗奋斗奋斗奋斗奋斗奋斗"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/s_first_qianduan_img"
        android:layout_alignTop="@+id/s_first_qianduan_img"/>
    <ImageView
        android:id="@+id/s_first_qianduan_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye"
        android:layout_toRightOf="@+id/s_first_qianduan_img"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:id="@+id/s_first_qianduan_yueduliang"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/s_first_qianduan_eye"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_height="wrap_content"
        android:text="1.2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/s_first_qianduan_yueduliang"
        android:text="阅读"/>
    <ImageView
        android:layout_marginLeft="50dp"
        android:id="@+id/s_first_qianduan_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu2"
        android:layout_toRightOf="@+id/s_first_qianduan_yueduliang"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:id="@+id/s_first_qianduan_zhangjieshu"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/s_first_qianduan_menu"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_height="wrap_content"
        android:text="31"/>
    <TextView
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/s_first_qianduan_zhangjieshu"
        android:layout_below="@+id/s_first_qianduan_bookname"
        android:layout_height="wrap_content"
        android:text="个章节"/>
    <TextView
        android:id="@+id/s_first_qianduan_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/s_first_qianduan_img"
        android:layout_below="@+id/s_first_qianduan_eye"
        android:layout_marginTop="10dp"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
</RelativeLayout>